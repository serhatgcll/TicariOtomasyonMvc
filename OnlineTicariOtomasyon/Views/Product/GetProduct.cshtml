@model OnlineTicariOtomasyon.Models.Class.Product
@{
    ViewBag.Title = "GetProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h5 class="alert alert-default-info" style="text-align:center"><b style="color:red">@Model.ProductName</b> Adlı Ürün Üzerinde Güncelleme İşlemi Yapılacak</h5>


@using (Html.BeginForm("ProductEdit", "Product", FormMethod.Post))
{

<div class="form-group">

    @Html.HiddenFor(x=>x.Id)
    @Html.Label("Ürün Adı:")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })


    @Html.Label("Ürün Marka:")
    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })


    @Html.Label("Açıklama:")
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })


    @Html.Label("Alış Fiyatı:")
    @Html.TextBoxFor(x => x.BuyingPrice, new { @class = "form-control" })


    @Html.Label("Satış Fiyatı:")
    @Html.TextBoxFor(x => x.SellingPrice, new { @class = "form-control" })


    @Html.Label("Ürün Resmi:")
    @Html.TextBoxFor(x => x.İmageUrl, new { @class = "form-control" })


    @Html.Label("Stok:")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })


    @Html.Label("Durum:")
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })


    @Html.Label("Kategori:")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.value, new { @class = "form-control" })

    <br />

</div>





  <button class="btn btn-success">Güncelle</button>

}

