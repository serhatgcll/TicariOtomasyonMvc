@model OnlineTicariOtomasyon.Models.Class.Department
@{
    ViewBag.Title = "DepartmantAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h5 class="alert alert-default-info" style="text-align:center"> Yeni Departman Ekle</h5>

<form class="form-group" method="post">
    @Html.Label("Departman Adı:")
    @Html.TextBoxFor(c=>c.DepartmentName ,new { @class = "form-control" })

    @Html.Label("Departman Açıklaması:")
    @Html.TextAreaFor(c => c.Description, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Kaydet</button>



</form>


