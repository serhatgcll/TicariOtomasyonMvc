@using OnlineTicariOtomasyon.Models.Class
@model List<InvoiceExpense>
@{
    ViewBag.Title = "InvoiceDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h5 class="alert alert-default-info" style="text-align:center">Fatura Kalem Detayı</h5>

<table id="tableSaleDetail" class="table table-borderes">
    <thead>

        <tr>
            <th>#</th>
            <th>Açıklama</th>
            <th>Miktar</th>
            <th>Birim Fiyatı</th>
            <th>Toplam Tutar</th>
           

        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.Id</td>
            <td>@item.Description</td>

            <td>@item.Amount</td>
            <td>@item.UnitPrice</td>
            <td>@item.TotalPrice</td>
          

        </tr>

    }


</table>
<a href="/Invoice/NewInvoiceExpense/" class="btn btn-info">Yeni Kalem Girişi</a>


<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tableSaleDetail').dataTable({});
</script>