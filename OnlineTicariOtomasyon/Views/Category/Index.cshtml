@using OnlineTicariOtomasyon.Models.Class
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<p>Toplamda @Model.Count() adet  kategori vardır.</p>
<table id="categoryIndex" class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Kategori Adı</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Oluşturma Tarihi</th>
            <th scope="col">Son Güncelleme Tarihi</th>
            <th scope="col">Durumu</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>


                <th>@item.Id</th>
                <th>@item.CategoryName</th>
                <th>@item.Description</th>
                <th>@item.CreatedDate</th>
                <th>@item.UpdatedDate</th>
                <th>@item.Status</th>
                <th><a href="/Category/CategoryDelete/@item.Id" class="btn btn-danger">Sil</a></th>
                <th><a href="/Category/GetCategory/@item.Id" class="btn btn-info">Güncelle</a></th>


            </tr>
        }
    </tbody>

</table>
<a href="/Category/CategoryAdd" class="btn btn-primary">Kategori Ekle</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#categoryIndex').dataTable({});
</script>